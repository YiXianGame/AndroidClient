<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameChooseFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_gamechoosebackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@drawable/repositorycard_bg"/>

    <Button
        android:id="@+id/soloGame_button"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:text="@string/solo_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/teamGame_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teamGame_button"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:text="@string/team_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/soloGame_button"
        app:layout_constraintRight_toLeftOf="@id/existenceGame_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/existenceGame_button"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="80dp"
        android:text="@string/survive_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/teamGame_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/returnMain_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="36dp"
        android:text="@string/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>