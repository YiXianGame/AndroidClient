<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repository_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Repository.RepositoryActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Card_frame"
        android:layout_width="555dp"
        android:layout_height="322dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Select_card">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Select_card"
        android:layout_width="124dp"
        android:layout_height="156dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="591dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Card_frame"
        app:layout_constraintBottom_toTopOf="@id/imageView1">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="86dp"
        android:layout_height="72dp"
        tools:layout_editor_absoluteX="616dp"
        tools:layout_editor_absoluteY="198dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintTop_toBottomOf="@id/Select_card"
        app:layout_constraintStart_toEndOf="@id/Card_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageView2"
        android:src="@drawable/ic_launcher_background"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="77dp"
        android:layout_height="76dp"
        tools:layout_editor_absoluteX="625dp"
        tools:layout_editor_absoluteY="290dp"
        app:layout_constraintTop_toBottomOf="@id/imageView1"
        app:layout_constraintStart_toEndOf="@id/Card_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:src="@drawable/ic_launcher_foreground"/>


</androidx.constraintlayout.widget.ConstraintLayout>
