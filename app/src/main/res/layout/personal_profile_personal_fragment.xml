<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/nickname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ziti"
        android:textAppearance="@style/TextAppearance.YiXian.Headline4"
        app:layout_constraintBottom_toTopOf="@id/statistical_table"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/nickname" />

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/head_image"
        android:src="@drawable/touxiang"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/nickname_text"
        />
    <TableLayout
        android:id="@+id/statistical_table"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/head_image"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TableRow android:layout_weight="1">
            <TextView
                android:id="@+id/kills_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="@string/history_kills"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/battle_count_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="@string/history_battle"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/deaths_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="@string/history_death"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:id="@+id/kills_num_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="@string/history_kills"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/battle_count_num_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="@string/history_battle"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/deaths_num_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="@string/history_death"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>