<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:id="@+id/teammates_layout"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/cardGroups_layout"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardGroups_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintLeft_toRightOf="@id/teammates_layout"
        app:layout_constraintRight_toLeftOf="@id/enemies_layout"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cardGroups_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/select_tab"
            app:layout_constraintVertical_weight="4"
            app:spanCount="4"
            tools:itemCount="5"
            tools:listitem="@layout/ready_equip_group_first"
            >
        </androidx.recyclerview.widget.RecyclerView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/select_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/cardGroups_recycler"
            app:layout_constraintBottom_toBottomOf="parent">
            <Button
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/confirm"
                android:textAppearance="@style/TextAppearance.YiXian.Body1"
                android:fontFamily="@font/ziti"
                >

            </Button>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/enemies_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/cardGroups_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:orientation="vertical">
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>