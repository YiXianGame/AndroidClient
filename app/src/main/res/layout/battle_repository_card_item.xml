<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@drawable/shape_corner"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attributes_recycle"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        >
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/left_attributes_layout"
        app:layout_constraintTop_toBottomOf="@id/attributes_recycle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buffs_recycle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mp_num_text"
            android:textAppearance="@style/TextAppearance.YiXian.Body1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/skillCard_mp"
            android:tooltipText="@string/skillCard_mp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/probability_num_text"
            android:textAppearance="@style/TextAppearance.YiXian.Body1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/skillCard_probability"
            android:tooltipText="@string/skillCard_probability" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/max_enemy_num_text"
            android:textAppearance="@style/TextAppearance.YiXian.Body1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/skillCard_max_enemy"
            android:tooltipText="@string/skillCard_max_enemy" />

        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.YiXian.Body1"
            android:id="@+id/max_auxiliary_num_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/skillCard_max_auxiliary"
            android:tooltipText="@string/skillCard_max_auxiliary" />
    </LinearLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/attributes_recycle"
        app:layout_constraintBottom_toTopOf="@id/buffs_recycle"
        app:layout_constraintLeft_toRightOf="@id/left_attributes_layout"
        app:layout_constraintRight_toLeftOf="@id/right_attributes_layout"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/skillCard_name"
            android:textAppearance="@style/TextAppearance.YiXian.Headline6">
        </com.google.android.material.textview.MaterialTextView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/right_attributes_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attributes_recycle"
        app:layout_constraintBottom_toTopOf="@id/buffs_recycle"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.YiXian.Body1"
            android:id="@+id/enemyHp_num_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/skillCard_enemy_hp"
            android:tooltipText="@string/skillCard_enemy_hp" />

        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.YiXian.Body1"
            android:id="@+id/enemyMp_num_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/skillCard_enemy_mp"
            android:tooltipText="@string/skillCard_enemy_mp" />

        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.YiXian.Body1"
            android:id="@+id/auxiliaryHp_num_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/skillCard_auxiliary_hp"
            android:tooltipText="@string/skillCard_auxiliary_hp" />

        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.YiXian.Body1"
            android:id="@+id/auxiliaryMp_num_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/skillCard_auxiliary_mp"
            android:tooltipText="@string/skillCard_auxiliary_mp" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buffs_recycle"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>
